#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setvbuf(stdout, NULL, _IONBF, 0);
	setvbuf(stderr, NULL, _IONBF, 0);
	int n=5;
	int i,j,l;
	for(i=1;i<=n;i++)
	{
		for(j=i;j<=n-1;j++)
		{
			printf(" ");
		}
		for(l=n*2;l<1;l-=2)
		{
			printf("*");
		}
		printf("\n");
	}
	return EXIT_SUCCESS;
}
